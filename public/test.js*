    // ÐžÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ ÑÐ¿Ð¸ÑÐºÐ° Ð¿Ð¾ÑÐ»Ðµ ÑƒÐ´Ð°Ð»ÐµÐ½Ð¸Ñ Ð·Ð°Ð¿Ð¸ÑÐ¸
    dataRef.on('child_removed', snapshot => {
      const deletedItem = dataList.querySelector(`[data-key="${snapshot.key}"]`);
      if (deletedItem) {
        deletedItem.remove();
      }
    });






