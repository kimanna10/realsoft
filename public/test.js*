    // Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð¾Ñ‚Ð¿Ñ€Ð°Ð²ÐºÐ¸ Ð´Ð°Ð½Ð½Ñ‹Ñ… Ð² Firebase
    function sendDataToFirebase(data) {
      const dataRef = firebase.database().ref('/realsoft/users'); // Ð—Ð°Ð¼ÐµÐ½Ð¸Ñ‚Ðµ 'users' Ð½Ð° Ð²Ð°Ñˆ Ð¿ÑƒÑ‚ÑŒ Ð² Ð±Ð°Ð·Ðµ Ð´Ð°Ð½Ð½Ñ‹Ñ…

      // ÐŸÑƒÑˆ Ð½Ð¾Ð²Ñ‹Ñ… Ð´Ð°Ð½Ð½Ñ‹Ñ… Ð² Ð±Ð°Ð·Ñƒ
      dataRef.push(data)
        .then(() => {
          alert('Ð”Ð°Ð½Ð½Ñ‹Ðµ ÑƒÑÐ¿ÐµÑˆÐ½Ð¾ Ð¾Ñ‚Ð¿Ñ€Ð°Ð²Ð»ÐµÐ½Ñ‹ Ð² Firebase!');
        })
        .catch(error => {
          console.error('ÐžÑˆÐ¸Ð±ÐºÐ° Ð¾Ñ‚Ð¿Ñ€Ð°Ð²ÐºÐ¸ Ð´Ð°Ð½Ð½Ñ‹Ñ…:', error);
        });
    }


      // ÐŸÐ¾Ð»ÑƒÑ‡ÐµÐ½Ð¸Ðµ Ð´Ð°Ð½Ð½Ñ‹Ñ… Ð¸Ð· Firebase Ð¸ Ð²Ñ‹Ð²Ð¾Ð´ Ð½Ð° ÑÑ‚Ñ€Ð°Ð½Ð¸Ñ†Ñƒ
    const dataRef = firebase.database().ref('/realsoft/users'); // Ð—Ð°Ð¼ÐµÐ½Ð¸Ñ‚Ðµ 'users' Ð½Ð° Ð²Ð°Ñˆ Ð¿ÑƒÑ‚ÑŒ Ð² Ð±Ð°Ð·Ðµ Ð´Ð°Ð½Ð½Ñ‹Ñ…

    dataRef.on('child_added', snapshot => {
      const data = snapshot.val();
      const key = snapshot.key;
      const ref = snapshot.ref;
      viewlist(key, data, ref);
      
    });


    function viewlist(key, data,ref){

      const listItem = document.createElement('li');
      listItem.setAttribute('data-key', key);
      listItem.innerText = `Ð˜Ð¼Ñ: ${data.name}, Ð’Ð¾Ð·Ñ€Ð°ÑÑ‚: ${data.age}, Email: ${data.email}`;
      

      // Ð¡Ð¾Ð·Ð´Ð°Ð½Ð¸Ðµ ÐºÐ½Ð¾Ð¿Ð¾Ðº Ð´Ð»Ñ ÑƒÐ¿Ñ€Ð°Ð²Ð»ÐµÐ½Ð¸Ñ Ð·Ð°Ð¿Ð¸ÑÑÐ¼Ð¸
      const editButton = document.createElement('button');
      editButton.innerText = 'Ð˜Ð·Ð¼ÐµÐ½Ð¸Ñ‚ÑŒ';
      editButton.onclick = function() {
        // Ð—Ð°Ð¿Ð¾Ð»Ð½ÐµÐ½Ð¸Ðµ Ð¿Ð¾Ð¿Ð°Ð¿Ð° Ð´Ð°Ð½Ð½Ñ‹Ð¼Ð¸ Ð¸Ð· Ð·Ð°Ð¿Ð¸ÑÐ¸
        document.getElementById('editName').value = data.name;
        document.getElementById('editAge').value = data.age;
        document.getElementById('editEmail').value = data.email;
        editPopup.style.display = 'block';
        
        // Ð¡Ð¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð¸Ðµ ÐºÐ»ÑŽÑ‡Ð° Ð·Ð°Ð¿Ð¸ÑÐ¸ Ð´Ð»Ñ Ñ€ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ
        selectedKey = key;
      };


      // Ð¡Ð¾Ð·Ð´Ð°Ð½Ð¸Ðµ ÐºÐ½Ð¾Ð¿ÐºÐ¸ ÑƒÐ´Ð°Ð»ÐµÐ½Ð¸Ñ Ð´Ð»Ñ ÐºÐ°Ð¶Ð´Ð¾Ð¹ Ð·Ð°Ð¿Ð¸ÑÐ¸
      const deleteButton = document.createElement('button');
      deleteButton.innerText = 'Ð£Ð´Ð°Ð»Ð¸Ñ‚ÑŒ';
      deleteButton.onclick = function() {
       ref.remove()
          .then(() => {
            alert('Ð—Ð°Ð¿Ð¸ÑÑŒ ÑƒÑÐ¿ÐµÑˆÐ½Ð¾ ÑƒÐ´Ð°Ð»ÐµÐ½Ð° Ð¸Ð· Firebase!');
          })
          .catch(error => {
            console.error('ÐžÑˆÐ¸Ð±ÐºÐ° ÑƒÐ´Ð°Ð»ÐµÐ½Ð¸Ñ Ð·Ð°Ð¿Ð¸ÑÐ¸:', error);
          });
      };

      listItem.appendChild(editButton);
      listItem.appendChild(deleteButton);
      dataList.appendChild(listItem);

}

    // ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚ÐºÐ° ÑÐ¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð¸Ñ Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ð¹ Ð² Ð¿Ð¾Ð¿Ð°Ð¿Ðµ
    saveEditBtn.addEventListener('click', function() {
