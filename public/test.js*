    // Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ñ Ð´Ð°Ð½Ð½Ñ‹Ñ… Ð² Firebase
    function updateDataInFirebase(key, newData) {
      const dataRef = firebase.database().ref(`/realsoft/users/${key}`); // Ð—Ð°Ð¼ÐµÐ½Ð¸Ñ‚Ðµ 'users' Ð½Ð° Ð²Ð°Ñˆ Ð¿ÑƒÑ‚ÑŒ Ð² Ð±Ð°Ð·Ðµ Ð´Ð°Ð½Ð½Ñ‹Ñ…

      // ÐžÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ Ð´Ð°Ð½Ð½Ñ‹Ñ…
      dataRef.update(newData)
        .then(() => {

          // ÐžÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ ÑÐ»ÐµÐ¼ÐµÐ½Ñ‚Ð° ÑÐ¿Ð¸ÑÐºÐ° Ð¿Ð¾ÑÐ»Ðµ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ñ Ð´Ð°Ð½Ð½Ñ‹Ñ…
          const updatedItem = dataList.querySelector(`[data-key="${key}"]`);
          if (updatedItem) {
            updatedItem.remove();
          }
          alert('Ð”Ð°Ð½Ð½Ñ‹Ðµ ÑƒÑÐ¿ÐµÑˆÐ½Ð¾ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ñ‹ Ð² Firebase!');
        })
        .catch(error => {
          console.error('ÐžÑˆÐ¸Ð±ÐºÐ° Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ñ Ð´Ð°Ð½Ð½Ñ‹Ñ…:', error);
        });
    }


  dataRef.on('child_changed', snapshot => {

      const data = snapshot.val();
      const key = snapshot.key;
      const ref = snapshot.ref;
      viewlist(key, data, ref);
});

    // ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚ÐºÐ° Ð·Ð°ÐºÑ€Ñ‹Ñ‚Ð¸Ñ Ð¿Ð¾Ð¿Ð°Ð¿Ð°
    closePopupBtn.addEventListener('click', function() {
